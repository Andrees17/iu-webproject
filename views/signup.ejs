                            </div>

                            <!-- Sign up Form -->
                            <form action="/signup" method="post" class="signup-form">
                                <div class="form-group mt-3">
                                    <input id="email-field" type="email" name="email" class="form-control" required>
                                    <label class="form-control-placeholder" for="email">Email address</label>
                                </div>
                                <div class="form-group mt-3">
                                    <input id="password-field" name="password" type="password" class="form-control"
                                        required>
                                    <label class="form-control-placeholder" for="password">Password</label>
                                    <span toggle="#password-field"
                                        class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <!-- Sign up button -->
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign
                                        up</button>
                                </div>
                            </form>

                            <!-- Handle Alerts passed by app.js in the message var -->
                            <% if(typeof message==='undefined' ){ %>
                                <!-- nothing happens here -->
                                <% } else if (message==="already-exists" ) { %>

                                    <div class="alert alert-danger" role="alert">This email already exist!</div>

                                    <% } %>

                                        <!-- Log in link -->
                                        <form method="GET" action="/login">
                                            <p class="text-center">Already Register?
                                                <a class="signup-button"
                                                    onclick="this.parentNode.parentNode.submit();">Log
                                                    in</a>
                                            </p>
                                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

